{
  "name": "modrinth-modpack-updater",
  "version": "1.0.0",
  "description": "A tool to check and update Modrinth modpacks for new Minecraft versions.",
  "main": "main.ts",
  "scripts": {
    "start": "ts-node main.ts && node dist/main.js",
    "build": "esbuild main.ts --bundle --platform=node --outfile=dist/main.js --format=cjs"
  },
  "dependencies": {
    "@actions/cache": "^4.0.0",
    "@actions/core": "^1.11.1",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "esbuild": "^0.24.2",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.9.5"
  }
}
